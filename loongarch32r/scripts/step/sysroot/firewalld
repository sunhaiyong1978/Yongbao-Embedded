source env/sysroot/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=sysroot
export STEP_PACKAGENAME=firewalld
export PACKAGE_VERSION=2.4.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/sysroot/firewalld/2.4.0/
rm -rf ${BUILD_DIRECTORY}/firewalld-2.4.0
tar xvf ${DOWNLOADDIR}/firewalld-2.4.0.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/firewalld-2.4.0
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} PYTHON=${CROSSTOOLS_DIR}/bin/${CROSS_TARGET}-python3 --disable-docs --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/firewalld-2.4.0
