source env/sysroot/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=sysroot
export STEP_PACKAGENAME=e2fsprogs
export PACKAGE_VERSION=1.47.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/sysroot/e2fsprogs/1.47.1/
rm -rf ${BUILD_DIRECTORY}/e2fsprogs-1.47.1
tar xvf ${DOWNLOADDIR}/e2fsprogs-1.47.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/e2fsprogs-1.47.1
	mkdir -v build
	pushd build
		CFLAGS="${CFLAGS} -std=gnu11" \
		../configure ${COMMON_CONFIG} \
		             --enable-elf-shlibs --disable-libblkid \
		             --disable-libuuid --disable-uuidd --disable-fsck \
			     --with-systemd-unit-dir=/usr/lib/systemd/system \
			     --with-udev-rules-dir=/usr/lib/udev/rules.d
		eval ${MAKE_AND_INSTALL}
		rm -fv ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/{libcom_err,libe2p,libext2fs,libss}.la
	popd
	cp -av ${SYSROOT_DIR}/usr/bin/mk_cmds ${CROSSTOOLS_DIR}/bin/
	sed -i "s@=/usr@=${SYSROOT_DIR}/usr@g" ${CROSSTOOLS_DIR}/bin/mk_cmds
popd 
rm -rf ${BUILD_DIRECTORY}/e2fsprogs-1.47.1
