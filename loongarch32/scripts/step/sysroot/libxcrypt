source env/sysroot/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=sysroot
export STEP_PACKAGENAME=libxcrypt
export PACKAGE_VERSION=4.5.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/sysroot/libxcrypt/4.5.2/
rm -rf ${BUILD_DIRECTORY}/libxcrypt-4.5.2
tar xvf ${DOWNLOADDIR}/libxcrypt-4.5.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxcrypt-4.5.2
	patch -Np1 -i ${SYSDIR}/files/sysroot/libxcrypt/4.5.2/patches/0001-fix-configure-error-under-loongarch32-architecture.patch 
	 
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	CFLAGS="${CFLAGS} -Wno-error=stringop-overread" ./configure ${COMMON_CONFIG} --disable-werror --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxcrypt-4.5.2
