source env/sysroot/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=sysroot
export STEP_PACKAGENAME=libxslt
export PACKAGE_VERSION=1.1.45
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/sysroot/libxslt/1.1.45/
rm -rf ${BUILD_DIRECTORY}/libxslt-1.1.45
tar xvf ${DOWNLOADDIR}/libxslt-1.1.45.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxslt-1.1.45
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} $(if [ -f ${SYSROOT_DIR}/usr/bin/python3 ]; then echo PYTHON=${CROSS_TARGET}-python3; else echo --with-python=no; fi) --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxslt-1.1.45
